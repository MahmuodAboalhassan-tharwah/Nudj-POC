# =============================================================================
# Nudj Platform - Environment Variables Template
# =============================================================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# =============================================================================
# App Configuration
# =============================================================================
APP_NAME=Nudj
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development

# =============================================================================
# Database (PostgreSQL with asyncpg)
# =============================================================================
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/nudj

# =============================================================================
# Redis
# =============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# =============================================================================
# JWT Authentication
# =============================================================================
JWT_SECRET_KEY=CHANGE_ME_IN_PRODUCTION_USE_SECURE_RANDOM_STRING_MIN_32_CHARS
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# Session Management
# =============================================================================
SESSION_TIMEOUT_MINUTES=30
SESSION_TIMEOUT_MIN=15
SESSION_TIMEOUT_MAX=120

# =============================================================================
# Password Policy
# =============================================================================
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_NUMBER=true
PASSWORD_REQUIRE_SPECIAL=true

# =============================================================================
# Account Security
# =============================================================================
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30
PASSWORD_RESET_EXPIRE_HOURS=1
INVITATION_EXPIRE_DAYS=7

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_LOGIN_PER_MINUTE=20
RATE_LIMIT_REGISTER_PER_10MIN=10
RATE_LIMIT_PASSWORD_RESET_PER_HOUR=5

# =============================================================================
# Email Service (SendGrid or AWS SES)
# =============================================================================
EMAIL_PROVIDER=sendgrid
SENDGRID_API_KEY=
EMAIL_FROM_ADDRESS=noreply@nudj.sa
EMAIL_FROM_NAME=Nudj HR Platform

# =============================================================================
# SMS Service (Unifonic - Saudi Arabia)
# =============================================================================
SMS_PROVIDER=unifonic
UNIFONIC_APP_ID=
UNIFONIC_SENDER_ID=Nudj
OTP_EXPIRE_MINUTES=5
OTP_LENGTH=6

# =============================================================================
# MFA (Multi-Factor Authentication)
# =============================================================================
MFA_ISSUER_NAME=Nudj HR Platform
MFA_MANDATORY_ROLES=["super_admin","analyst"]

# =============================================================================
# CORS Configuration
# =============================================================================
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173","https://nudj.sa"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# =============================================================================
# Encryption (PDPL Compliance - PII Encryption)
# =============================================================================
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=CHANGE_ME_32_BYTE_FERNET_KEY

# =============================================================================
# Security Headers
# =============================================================================
CSP_ENABLED=false

# =============================================================================
# API Configuration
# =============================================================================
API_V1_PREFIX=/api/v1

# =============================================================================
# Frontend Configuration (for Vite)
# =============================================================================
VITE_API_URL=http://localhost:8000/api
