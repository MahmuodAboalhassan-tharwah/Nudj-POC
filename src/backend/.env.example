# Environment Variables Template
# Copy to .env and fill in values

# =============================================================================
# Database
# =============================================================================
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/nudj_dev

# =============================================================================
# JWT Configuration
# =============================================================================
# IMPORTANT: Change this in production!
JWT_SECRET_KEY=change-me-to-a-secure-random-string-min-32-chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# Session Configuration
# =============================================================================
SESSION_TIMEOUT_MINUTES=30
MAX_SESSIONS_PER_USER=3

# =============================================================================
# MFA Configuration
# =============================================================================
MFA_ISSUER_NAME=Nudj Platform

# =============================================================================
# Redis (Optional - for session tracking)
# =============================================================================
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# Security
# =============================================================================
ACCOUNT_LOCKOUT_THRESHOLD=5
ACCOUNT_LOCKOUT_DURATION_MINUTES=15
PASSWORD_MIN_LENGTH=8

# =============================================================================
# CORS
# =============================================================================
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# =============================================================================
# Email (Placeholder)
# =============================================================================
EMAIL_FROM_ADDRESS=noreply@nudj.sa
EMAIL_FROM_NAME=Nudj Platform

# =============================================================================
# Application
# =============================================================================
ENVIRONMENT=development
DEBUG=true

# =============================================================================
# External Services (Email & SMS)
# =============================================================================
EMAIL_PROVIDER=sendgrid
SENDGRID_API_KEY=
SMS_PROVIDER=unifonic
UNIFONIC_APP_ID=

# =============================================================================
# Encryption
# =============================================================================
# Generate a 32-byte url-safe base64-encoded key
ENCRYPTION_KEY=CHANGE_ME_32_BYTE_KEY_FOR_FERNET
